{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Screen Analyzer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "args": [
                "examples/sample_screens/test_image.png"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Run Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_analyzer.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}